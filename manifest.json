{
  "manifest_version": 2,

  "name": "uSelect iDownload",
  "version": "1.3.1",

  "description": "__MSG_extDesc__",
  "icons": {
    "32": "res/icon32.png",
    "48": "res/icon48.png",
    "52": "res/icon52.png",
    "92": "res/icon92.png",
    "128": "res/icon128.png"
  },

  "browser_action": {
    "default_icon": "res/icon32.png",
    "default_title": "__MSG_actionTitle__"
  },

  "background": {
    "scripts": ["js/shortcut.js", "js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["overlay.css"],
      "js": ["js/shortcut.js", "js/shortcut_handler.js", "js/statemachine.js", "js/defs.js", "js/overlay.js", "js/main.js"]
    }
  ],
  "default_locale": "en",
  "options_page": "options.html",
  "permissions": [
    "<all_urls>", "tabs"
  ]
}
